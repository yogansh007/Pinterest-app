<% include ./partials/header.ejs %>
   <div class="container w-full min-h-screen bg-zinc-800 text-white pt-1">
      <form hidden method="post" enctype="multipart/form-data" id="form" action="/fileupload">
         <input id="file" type="file" name="file">
      </form>
      <div class="prof_del flex  flex-col items-center mt-10">
         <div class="relative">
            <span class="w-10 h-10 absolute bottom-0 right-0 rounded-full bg-zinc-200 flex justify-center items-center">
               <i id="fileSubmit" class=" text-zinc-800 ri-pencil-fill"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden"><img class="w-full h-full object-cover"
                     src="/images/uploads/<%=user.image  %>"
                  alt=""></div>
         </div>
         <h1 class="text-2xl mt-2"> <%= user.name%></h1>
         <h1 class="text-xs mb-3">@<%=user.username%></h1>
         <a href="/edit" class="bg-zinc-500 px-4 py-1 rounded-full">Edit</a>
         <a href="/addpost" class="bg-red-700 mt-3 py-2 px-4 rounded-lg text-xs">Add new Post</a>
      </div>
      <div class="cards flex flex-wrap mt-10 gap-5 px-2">
         <div class="card">
            <div class="w-40 h-40 bg-zinc-200 rounded-lg overflow-hidden"> <img class="w-full h-full object-cover"
                  src="/images/uploads/<%=user?.posts[0]?.image%>"
                  alt=""></div>
          <a href="/show/posts">
              <h3 class="mt-2"> Your uploaded pins</h3>
          </a>
            <h6 class="text-xs opacity-60"><%=user.posts.length%></h6>
         </div>
         

      </div>
   </div>
   <% include ./partials/footer.ejs %>

   <script>
      document.getElementById("fileSubmit").addEventListener("click",function(){
       document.getElementById("file").click()
      })

      document.getElementById("file").addEventListener("change",function(){
            document.getElementById("form").submit()
      })
   </script>