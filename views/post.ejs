<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 text-white py-4 px-4">
    <h1>Creata a Post</h1>
    <hr class="text-zinc-600 mt-3">

    <form action="/upload" method="post" enctype="multipart/form-data">
        <input class="block" type="file" name="postImg">
        <input class="block bg-white text-black my-2 w-1/3 p-2" name="title" type="text" placeholder="title">
        <textarea class="block bg-white text-black w-1/3" name="description" id="" placeholder="description"></textarea>
        <input class="bg-red-600 w-1/3 p-2 mt-2" type="submit">
    </form>
</div>
